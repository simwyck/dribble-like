<h2>Inscription</h2>

<div id="signup-block">
  <div id="pgauche">
    <h1>uniform</h1>
    <h2>L'inscription devient plus simple</h2>
    <!--<hr />-->
    <ul>
      <li><span class="flaticon-file"></span> Un seul formulaire pour toutes les écoles</li>
      <li><span class="flaticon-university-graduate-hat"></span> Gérez facilement vos candidatures</li>
      <li><span class="flaticon-cloud"></span> Stockez vos données scolaires</li>
    </ul>
  </div>
  <div id="pdroite">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <p>Choisissez vos identifiants</p>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Adresse email", class: "flaticon-user-silhouette" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe" %><br />
        <% if @minimum_password_length %>
        <em>* <%= @minimum_password_length %> caratères minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmation Mdp" %>
      </div>

      <div class="actions">
        <%= f.submit "Inscription", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
